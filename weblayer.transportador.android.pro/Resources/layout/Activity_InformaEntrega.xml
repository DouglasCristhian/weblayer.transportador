<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollview">

  <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <!--Código da NFe-->
    <TextView
       android:id="@+id/lblCodigoNF"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:layout_marginTop="30dip"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:text="Código da NFe"/>

    <EditText
       android:id="@+id/txtCodigoNF"
       android:focusableInTouchMode="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="#000000"
       android:textSize="50px"
       android:inputType="number"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"/>

    <!--Botão apara scanear-->
    <Button
       android:id="@+id/btnEscanearNF"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:text="Ler Código de Barras"
        android:layout_marginBottom="20dip"
       />

    <!--CNPJ-->
    <TextView
       android:id="@+id/lblCNPJ"
       android:text="CNPJ Emissor: "
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"/>



    <!--Numero da Nota-->
    <TextView
         android:id="@+id/lblNumeroNF"
         android:text="Numero da NF: "
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceSmall"
         android:layout_marginLeft = "18dip"
         android:layout_marginRight = "18dip"/>


    <!--Código da Ocorrência-->
    <TextView
      android:id="@+id/lblOcorrencia"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:layout_marginLeft = "18dip"
      android:layout_marginTop="10dip"
      android:text="Ocorrência"/>

    <Spinner
      android:id="@+id/spinnerOcorrencia"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textSize="18sp"
      app:theme="@style/SpinnerTheme"
      android:layout_marginLeft="18dip"
      android:layout_marginRight="18dip"/>

    <!--<Spinner
      android:id="@+id/spinnerOcorrencia"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:layout_marginRight = "18dip"
      android:layout_marginLeft = "18dip"
      android:text="Código da NF"/>-->

    <!--Data da Ocorrência-->
    <TextView
       android:id="@+id/lblDataEntrega"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:layout_marginLeft = "18dip"
       android:layout_marginRight = "18dip"
       android:layout_marginTop="10dip"
       android:text="Data da Ocorrência:"/>

    <TextView
       android:id="@+id/txtDataEntrega"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="#000000"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:layout_marginRight = "18dip"
       android:layout_marginLeft = "18dip"/>

    <!--Hora da Ocorrência-->
    <TextView
      android:id="@+id/lblHoraENtrega"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:layout_marginLeft = "18dip"
      android:layout_marginRight = "18dip"
      android:layout_marginTop="10dip"
      android:text="Hora da Ocorrência:"/>

    <TextView
       android:id="@+id/txtHoraEntrega"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:textColor="#000000"
       android:layout_marginRight = "18dip"
       android:layout_marginLeft = "18dip"/>

    <!--Observação-->
    <TextView
      android:id="@+id/lblObservacao"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:layout_marginLeft = "18dip"
      android:layout_marginRight = "18dip"
      android:layout_marginTop="10dip"
      android:text="Observação"/>

    <EditText
       android:id="@+id/txtObservacao"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textColor="#000000"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:layout_marginRight = "18dip"
       android:layout_marginLeft = "18dip"
       android:inputType="text"/>

    <TextView
      android:id="@+id/lblStatus"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAppearance="?android:attr/textAppearanceSmall"
      android:layout_marginLeft = "18dip"
      android:layout_marginRight = "18dip"
      android:layout_marginTop="10dip"
      android:text="Status"/>

    <TextView
       android:id="@+id/txtStatus"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:layout_marginRight = "18dip"
       android:layout_marginLeft = "18dip"
       android:inputType="text"/>


    <!--Botão anexar imagem-->
    <Button
       android:text= "Anexar Imagem"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dip"
       android:layout_marginRight = "18dip"
       android:layout_marginLeft = "18dip"
       android:paddingLeft="30dip"
       android:paddingRight="30dip"
       android:id="@+id/btnAnexarImagem" />

    <Button
      android:text= "Salvar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginRight = "18dip"
      android:layout_marginLeft = "18dip"
      android:paddingLeft="30dip"
      android:paddingRight="30dip"
      android:id="@+id/btnSalvar"/>

    <!--Botão salvar + enviar-->
    <Button
       android:text= "Salvar e Compartilhar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginRight = "18dip"
       android:layout_marginLeft = "18dip"
       android:paddingLeft="30dip"
       android:paddingRight="30dip"
       android:id="@+id/btnEnviar"/>

    <!--Botão enviar por email-->
    <Button
      android:text= "Compartilhar via e-mail"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dip"
      android:layout_marginRight = "18dip"
      android:layout_marginLeft = "18dip"
      android:paddingLeft="30dip"
      android:paddingRight="30dip"
      android:id="@+id/btnEnviarViaEmail"/>

    <!--Imagem do anexo-->
    <ImageView
      android:id="@+id/imageView"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:layout_gravity="center"
      android:layout_marginTop="18dip"
      android:layout_marginBottom="18dip"/>

  </LinearLayout>
</ScrollView>
