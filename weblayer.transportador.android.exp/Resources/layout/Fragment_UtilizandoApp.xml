<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:minWidth="25px"
      android:minHeight="25px">

    <TextView
       android:text="Introdução"
       android:layout_marginLeft="18dip"
       android:layout_marginTop="18dip"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <TextView
      android:text="@string/utilizandoApp_Introducao"
      android:layout_marginLeft="20dip"
      android:layout_marginRight="20dip"
      android:layout_marginTop="20dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

    <TextView
       android:text="Utilizando o Aplicativo"
       android:layout_marginLeft="18dip"
       android:layout_marginTop="18dip"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <!--Na primeira tela...-->
    <TextView
       android:text="@string/utilizando_App1"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:background="@drawable/Menu"/>

    <!--Ao fazer isso...-->
    <TextView
       android:text="@string/utilizando_App2"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <!--O código de barras da nota...-->
    <TextView
       android:text="@string/utilizando_App3"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/TelaPreenchimento1"/>

    <!--O tipo de ocorrencia...-->
    <TextView
       android:text="@string/utilizando_App4"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
      android:layout_marginTop="18dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/TelaPreenchimento2"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/SelecaoOcorrencia"/>

    <!--A data e a hora...-->
    <TextView
       android:text="@string/utilizando_App5"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
      android:layout_marginTop="18dip"
      android:layout_gravity="center_horizontal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/TelaPreenchimento3"/>

    <TextView
      android:text="Definindo a data:"
      android:layout_marginLeft="18dip"
      android:layout_marginRight="18dip"
      android:layout_marginTop="18dip"
      android:textAppearance="?android:attr/textAppearanceMedium"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="10dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/SelecaoData"/>

    <TextView
       android:text="Definindo a hora:"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="18dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="10dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/SelecaoHora"/>

    <TextView
       android:text="Permissões"
       android:layout_marginLeft="18dip"
       android:layout_marginTop="18dip"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <!--Após clicar no botão...-->
    <TextView
       android:text="@string/permissoes_1"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/PermissoesCamera"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/PermissoesMidia"/>

    <!--Incluir uma foto...-->
    <TextView
       android:text="@string/permissoes_2"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/ImagemAnexada"/>

    <TextView
     android:text="Enviar dados via E-mail"
     android:layout_marginLeft="18dip"
     android:layout_marginTop="18dip"
     android:textAppearance="?android:attr/textAppearanceLarge"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"/>

    <!--Ao escolher 'Salvar e Enviar'...-->
    <TextView
       android:text="@string/enviaremail_1"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/EmailAndroidPronto"/>

    <TextView
       android:text="@string/enviaremail_2"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <TextView
       android:text="Registros: Visualizar"
       android:layout_marginLeft="18dip"
       android:layout_marginTop="18dip"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <!--Para visualizar os dados de uma entrega ...-->
    <TextView
       android:text="@string/registrosVisualizar_1"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/VisualizarRegistros"/>

    <!--Não é possível alterar uma entrega já efetuada...-->
    <TextView
       android:text="@string/registrosVisualizar_2"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <TextView
       android:text="Registros: Excluir"
       android:layout_marginLeft="18dip"
       android:layout_marginTop="18dip"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

    <!--Para visualizar os dados de uma entrega ...-->
    <TextView
       android:text="@string/registrosExcluir"
       android:layout_marginLeft="18dip"
       android:layout_marginRight="18dip"
       android:layout_marginTop="10dip"
       android:textAppearance="?android:attr/textAppearanceMedium"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <ImageView
       android:layout_marginTop="18dip"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/ExcluirRegistros"/>

  </LinearLayout>
</ScrollView>